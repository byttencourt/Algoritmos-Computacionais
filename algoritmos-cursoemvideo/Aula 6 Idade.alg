algoritmo "creuza como calcular idade"
// Função :
// Autor :
// Data : 10/03/2022
// Seção de Declarações 
var
  ano_atual, ano_nascimento, idade: inteiro
inicio
// Seção de Comandos 
   escreva ("Em que ano estamos?")
   leia (ano_atual)
   escreva ("Em que ano nasci?")
   leia (ano_nascimento)
   idade <- ano_atual - ano_nascimento
   escreva ("Minha idade é ", idade)
   
fimalgoritmo
